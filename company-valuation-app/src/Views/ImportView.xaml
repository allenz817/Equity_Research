<Window x:Class="CompanyValuationApp.Views.ImportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Financial Data" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Upload your Excel file containing financial statements:" 
                       FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <Button Name="btnBrowse" Content="Browse..." Width="100" Click="BtnBrowse_Click"/>
            <TextBox Name="txtFilePath" Margin="0,10,0,10" IsReadOnly="True"/>
            <Button Name="btnImport" Content="Import" Width="100" Click="BtnImport_Click" Margin="0,10,0,0"/>
            <TextBlock Name="txtStatus" Margin="0,20,0,0" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>