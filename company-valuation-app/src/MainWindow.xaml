<Window x:Class="CompanyValuationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CompanyValuationApp.Views"
        Title="Company Valuation App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Import Financial Statements" Width="200" Click="ImportButton_Click"/>
            <Button Content="Calculate Valuation" Width="200" Click="CalculateButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
        
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>